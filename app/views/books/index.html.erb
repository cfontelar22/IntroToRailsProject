
<% if @books.present? %>
  <% @books.each do |book| %>
  <% end %>
<% else %>
  <p>No results found.</p>
<% end %>

<h1>Books Collection</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
      </tr>
    <% end %>
  </tbody>
</table>

